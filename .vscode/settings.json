{
    "plantuml.exportOutDir": "doc/images",
    "plantuml.exportIncludeFolderHeirarchy": false,
    "plantuml.exportSubFolder": false,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
