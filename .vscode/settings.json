    "python.analysis.extraPaths": ["${workspaceFolder}/PlantController","${workspaceFolder}/tests","${workspaceFolder}/PlantModel","${workspaceFolder}/PlantView","${workspaceFolder}/DataTransferObject"],
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/PlantController;${workspaceFolder}/tests;${workspaceFolder}/PlantModel;${workspaceFolder}/PlantView;${workspaceFolder}/DataTransferObject"
    }
}